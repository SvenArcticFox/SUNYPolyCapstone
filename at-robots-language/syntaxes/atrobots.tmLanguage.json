{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "AT-Robots Assembly",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#instruction"
		},
		{
			"include": "#comment"
		},
		{
			"include": "#label"
		},
		{
			"include": "#entity"
		},
		{
			"include": "#ignore"
		},
		{
			"include": "#constant"
		},
		{
			"include": "#operator"
		},
		{
			"include": "#storage"
		}
	],
	"repository": {
		"ignore": {
			"patterns": [{
				"name": "ignore.atrobots",
				"match": "[ \\t\\b\\v\\f\\r]+"
			}]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.atrobots",
				"match": "\\b(?i)(jne|jge|nop|ret|call|jmp|cmp|jls|jgr|je|jle|jz|jnz|jtl|xchg|do|loop|test|mov|addr|get|put|int|ipo|in|opo|out|del|push|pop|err)\\b"
			}]
		},
		"comment": {
			"patterns": [{
				"name": "comment.line.character.atrobots",
				"match": ";.*"
			}]
		},
		"instruction" :{
			"patterns": [{
				"name": "keyword.operator.new.atrobots",
				"match": "\\b(?i)(ADD|INC|DEC|SHL|SHR|ROL|ROR|SAL|SAR|NEG|mod|sub|or|and|xor|not|mpy|div)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.atrobots",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.atrobots",
					"match": "\\\\."
				}
			]
		},
		"label": {
			"name": "entity.name.function",
			"begin": "!",
			"end": " "
		}
	},
	"scopeName": "source.at2"
}