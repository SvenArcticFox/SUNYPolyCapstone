{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "AT-Robots Assembly",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#instruction"
		},
		{
			"include": "#comment"
		},
		{
			"include": "#label"
		},
		{
			"include": "#ignore"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#comma"
		},
		{
			"include": "#register"
		},
		{
			"include": "#compliler_directives"
		},
		{
			"include": "#define_variables"
		},
		{
			"include": "#number_label"
		},
		{
			"include": "#hexadecimal_numbers"
		}
	],
	"repository": {
		"ignore": {
			"patterns": [{
				"name": "ignore.atrobots",
				"match": "[ \\t\\b\\v\\f\\r\\n]+"
			}]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.atrobots",
				"match": "\\b(?i)(jne|jge|nop|ret|call|jmp|cmp|jls|jgr|je|jle|jz|jnz|jtl|xchg|do|loop|test|mov|addr|get|put|int|ipo|in|opo|out|del|push|pop|err)\\b"
			}]
		},
		"comment": {
			"patterns": [{
				"name": "comment.line.character.atrobots",
				"match": ";.*"
			}]
		},
		"instruction" :{
			"patterns": [{
				"name": "keyword.operator.new.atrobots",
				"match": "\\b(?i)(ADD|INC|DEC|SHL|SHR|ROL|ROR|SAL|SAR|NEG|mod|sub|or|and|xor|not|mpy|div)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.atrobots",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.atrobots",
					"match": "\\\\."
				}
			]
		},
		"label": {
			"name": "entity.name.function.atrobots",
			"begin": "!",
			"end": "( |\\n|\\r|\\t)"
		},
		"number_label" : {
			"name": "entity.name.function.atrobots",
			"begin": ":[0-9]+",
			"end": "((?i)[a-z]| |\\n|\\r|\\t)"
		},
		"register": {
			"patterns": [{
				"name": "support.variable.atrobots",
				"match": "\\b(?i)([a-f]x|sp|Flags)\\b"
			}]
			
		},
		"comma": {
			"patterns": [{
					"name": "support.atrobots",
					"match": "[,]"
			}]
		},
		"numbers": {
			"patterns" :[{
				"name": "constant.numeric.dec.atrobots",
				"match": "\\b[-+]?[0-9]([0-9])*\\b"
			}]
		},
		"compliler_directives": {
			"begin": "(?i)#(msg|time|config)",
			"end": "(\\n|\\r|\\t)",
			"name": "storage.modifier.atrobots",
			"patterns": [{
				"name": "keyword.operator.atrobots",
				"match": "="
			},
			{
				"name": "entity.name.type.atrobots",
				"begin": " ",
				"end": "=",
				"match": "(?i)[a-z]+"
			},
			{
				"name": "constant.numeric.dec.atrobots",
				"begin": "=",
				"match": "\\b[-+]?[0-9]([0-9])*\\b",
				"end": "(\\n|\\r)"
				
			}]
		},
		"define_variables": {
			"begin": "(?i)#def",
			"end": "(\\n|\\r|\\t)",
			"name": "storage.modifier.atrobots",
			"patterns": [{
				"name": "variable.other.atrobots",
				"begin": " ",
				"end": "( |\\n|\\r|\\t)",
				"match": "(?i)([a-z]+|_|-)"
			}]
		},
		"hexadecimal_numbers": {
			"patterns": [{
				"name": "constant.numeric.hex.atrobots",
				"match": "\\b(?i)(_*[0-9a-f])+h\\b"
			}]
		}
		
	},
	"scopeName": "source.at2"
}